@{
    Layout = "_Layout";
    ViewData["Title"] = "Liên hệ";
}

<div class="container-fluid p-0 my-5">
    <div class="text-center mb-5 pb-4">
        <img src="~/images/contact-banner.jpg" class="img-fluid shadow-sm rounded" alt="Liên hệ" style="max-height: 450px; width: 85%; object-fit: cover;" />
    </div>

    <div class="container mb-5 py-4">
        <div class="row g-5">
            <div class="col-lg-6 pe-lg-5">
                <h3 class="fw-bold mb-5 text-uppercase">Thông tin liên hệ</h3>

                <div class="d-flex align-items-center p-4 shadow-sm border rounded mb-4 bg-white" style="height: 130px;">
                    <div class="bg-primary text-white rounded-3 d-flex align-items-center justify-content-center" style="width: 70px; height: 70px; flex-shrink: 0;">
                        <i class="bi bi-envelope-fill fs-2"></i>
                    </div>
                    <div class="ms-4">
                        <h5 class="fw-bold mb-2">Email</h5> <p class="text-muted mb-0 fs-5">shopH123@gmail.com</p>
                    </div>
                </div>

                <div class="d-flex align-items-center p-4 shadow-sm border rounded mb-4 bg-white" style="height: 130px;">
                    <div class="bg-primary text-white rounded-3 d-flex align-items-center justify-content-center" style="width: 70px; height: 70px; flex-shrink: 0;">
                        <i class="bi bi-telephone-outbound-fill fs-3"></i>
                    </div>
                    <div class="ms-4">
                        <h5 class="fw-bold mb-2">Số Điện Thoại</h5>
                        <p class="text-muted mb-0 fs-5">(+84) 123 456 789</p>
                    </div>
                </div>

                <div class="d-flex align-items-center p-4 shadow-sm border rounded bg-white" style="height: 130px;">
                    <div class="bg-primary text-white rounded-3 d-flex align-items-center justify-content-center" style="width: 70px; height: 70px; flex-shrink: 0;">
                        <i class="bi bi-geo-alt-fill fs-3"></i>
                    </div>
                    <div class="ms-4">
                        <h5 class="fw-bold mb-2">Địa Chỉ</h5>
                        <p class="text-muted mb-0 fs-5">123, Thống Nhất, Gò Vấp, TP.HCM</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 ps-lg-5">
                <h3 class="fw-bold mb-5 text-uppercase">Lời nhắn</h3>

                <form action="#" method="post">
                    <div class="mb-4">
                        <input type="text" class="form-control form-control-lg py-3 border-0 bg-white shadow-sm" placeholder="Họ và tên" style="border-radius: 12px;">
                    </div>
                    <div class="mb-4">
                        <input type="email" class="form-control form-control-lg py-3 border-0 bg-white shadow-sm" placeholder="Địa chỉ Email" style="border-radius: 12px;">
                    </div>
                    <div class="mb-4">
                        <input type="text" class="form-control form-control-lg py-3 border-0 bg-white shadow-sm" placeholder="Số điện thoại" style="border-radius: 12px;">
                    </div>
                    <div class="mb-4">
                        <textarea class="form-control form-control-lg py-3 border-0 bg-white shadow-sm" rows="5" placeholder="Nội dung lời nhắn" style="border-radius: 12px;"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg w-100 py-3 shadow-sm fw-bold mt-2" style="border-radius: 12px;">Gửi yêu cầu ngay</button>
                </form>
            </div>
        </div>
    </div>
</div>