
@{
	Layout = "_Layout";
}

<div class="container-fluid bg-light d-flex align-items-center" style="min-height: 85vh;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-6">
                <div class="card border-0 shadow-lg rounded-0">
                    <div class="card-body p-5">
                        <h1 class="text-center mb-5 fw-light text-uppercase" style="letter-spacing: 4px;">Đăng Nhập</h1>

                        <form asp-controller="Account" asp-action="SignIn" method="post">
                            <div asp-validation-summary="All" class="text-danger mb-3 small"></div>

                            <div class="mb-4">
                                <label class="form-label small fw-bold text-uppercase" style="letter-spacing: 1px;">Email / Tên đăng nhập</label>
                                <input class="form-control rounded-0 border-dark py-3" placeholder="email@example.com" required />
                            </div>

                            <div class="mb-4">
                                <label class="form-label small fw-bold text-uppercase" style="letter-spacing: 1px;">Mật khẩu</label>
                                <input type="password" class="form-control rounded-0 border-dark py-3" placeholder="••••••••" required />
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-5">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input rounded-0 border-dark" id="rememberMe" />
                                    <label class="form-check-label small" for="rememberMe">Ghi nhớ đăng nhập</label>
                                </div>
                                <a asp-action="ForgotPassword" class="text-dark small text-decoration-none border-bottom border-dark">Quên mật khẩu?</a>
                            </div>

                            <button type="submit" class="btn btn-dark w-100 py-3 rounded-0 text-uppercase fw-bold" style="letter-spacing: 2px;">
                                Đăng Nhập
                            </button>

                            <div class="mt-5 text-center">
                                <span class="text-muted small text-uppercase">Bạn chưa có tài khoản?</span><br>
                                <a asp-action="SignUp" class="text-dark fw-bold text-decoration-none small text-uppercase" style="letter-spacing: 1px;">Tạo tài khoản ngay</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>