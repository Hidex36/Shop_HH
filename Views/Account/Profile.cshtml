@model Web_CK.Models.Users

@{
    Layout = "_Layout";
}

<div class="container mt-5 p-4" style="max-width: 1000px;">
    <h3 class="display-6 fw-bolder mb-5 text-uppercase">Hồ sơ của bạn</h3>

    <div class="text-center mb-5">
        <div class="mb-4">
            <img src="@Model.imageUrl" class="rounded-circle shadow-lg border border-3 border-white" alt="Avatar" />
        </div>
        <div>
            <button class="btn btn-outline-dark btn-lg px-5 rounded-pill fw-bold">Thay đổi ảnh đại diện</button>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-4 rounded-4">
        <div class="card-body p-4">
            <h4 class="fw-bold mb-4 border-bottom pb-3">
                <i class="bi bi-shield-lock me-2"></i>Quản lý tài khoản
            </h4>

            <div class="row fs-5 gy-3">
                <div class="col-md-4 fw-bold">Email:</div>
                <div class="col-md-8 text-secondary font-monospace">@Model.Email</div>

                <div class="col-md-4 fw-bold">Mật khẩu:</div>
                <div class="col-md-8 text-secondary text-truncate">@Model.PasswordHash</div>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <button class="btn btn-dark btn-lg px-4 shadow-sm">Đổi mật khẩu</button>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-4 rounded-4">
        <div class="card-body p-4">
            <h4 class="fw-bold mb-4 border-bottom pb-3">
                <i class="bi bi-person-lines-fill me-2"></i>Thông tin cá nhân
            </h4>

            <div class="row fs-5 gy-3">
                <div class="col-sm-4 fw-bold text-dark">Họ và tên:</div>
                <div class="col-sm-8 text-muted">@Model.FullName</div>

                <div class="col-sm-4 fw-bold text-dark">Ngày sinh:</div>
                <div class="col-sm-8 text-muted">@Model.DateOfBirth</div>

                <div class="col-sm-4 fw-bold text-dark">Giới tính:</div>
                <div class="col-sm-8 text-muted">@Model.Sex</div>

                <div class="col-sm-4 fw-bold text-dark">Số điện thoại:</div>
                <div class="col-sm-8 text-muted">@Model.PhoneNumber</div>

                <div class="col-sm-4 fw-bold text-dark">Địa chỉ:</div>
                <div class="col-sm-8 text-muted">@Model.Address</div>
            </div>

            <div class="d-flex justify-content-end mt-4 pt-3">
                <button class="btn btn-lg btn-dark px-5 shadow">
                    Chỉnh sửa thông tin
                </button>
            </div>
        </div>
    </div>
</div>