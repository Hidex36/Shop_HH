@{
    Layout = "_Layout";
}

<div class="container py-4">

    <!--picture-->
    <div class="text-center mb-5">
        <img src="~/images/contact-banner.jpg" class="img-fluid rounded-4 shadow-sm" alt="Liên hệ"
             style="max-height: 400px; width: 85%; object-fit: cover;" />
    </div>
    <div class="row g-4">

        <!--Contact-->
        <div class="col-lg-6">
            <div class="h-100 p-5 bg-white border border-2 border-primary-subtle rounded-4 shadow-sm">
                <h3 class="fw-bold mb-5 text-primary text-uppercase">Thông tin liên hệ</h3>

                <div class="d-flex align-items-center mb-5">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 60px; height: 60px; flex-shrink: 0;">
                        <i class="bi bi-geo-alt-fill fs-2"></i>
                    </div>
                    <div class="ms-4">
                        <h6 class="fw-bold mb-1 text-dark fs-4">Địa Chỉ</h6>
                        <p class="text-muted mb-0 fs-5">123, Thống Nhất, Gò Vấp, TP.HCM</p>
                    </div>
                </div>

                <div class="d-flex align-items-center mb-5">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 60px; height: 60px; flex-shrink: 0;">
                        <i class="bi bi-telephone-fill fs-2"></i>
                    </div>
                    <div class="ms-4">
                        <h6 class="fw-bold mb-1 text-dark fs-4">Số Điện Thoại</h6>
                        <p class="text-muted mb-0 fs-5">(+84) 123 456 789</p>
                    </div>
                </div>

                <div class="d-flex align-items-center mb-5">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 60px; height: 60px; flex-shrink: 0;">
                        <i class="bi bi-envelope-fill fs-2"></i>
                    </div>
                    <div class="ms-4">
                        <h6 class="fw-bold mb-1 text-dark fs-4">Email</h6>
                        <p class="text-muted mb-0 fs-5">shopH123@gmail.com</p>
                    </div>
                </div>
            </div>
        </div>

        <!--Message-->
        <div class="col-lg-6">
            <div class="h-100 p-5 bg-white border border-2 border-primary-subtle rounded-4 shadow-sm">
                <h3 class="fw-bold mb-4 text-primary text-uppercase">Lời nhắn</h3>
                <form>
                    <div class="mb-4">
                        <input type="text" class="form-control form-control-lg border-2 bg-light" placeholder="Họ và tên" style="border-radius: 12px;">
                    </div>
                    <div class="mb-4">
                        <input type="email" class="form-control form-control-lg border-2 bg-light" placeholder="Email" style="border-radius: 12px;">
                    </div>
                    <div class="mb-4">
                        <textarea class="form-control form-control-lg border-2 bg-light" rows="5" placeholder="Nội dung lời nhắn" style="border-radius: 12px;"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold py-3 shadow" style="border-radius: 12px;">
                        GỬI YÊU CẦU NGAY
                    </button>
                </form>
            </div>
        </div>

    </div>
</div>