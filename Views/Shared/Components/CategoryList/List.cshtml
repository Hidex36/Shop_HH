@model IEnumerable<Categories>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-dark text-white fw-bold py-3">
        <i class="bi bi-list-ul me-2"></i> DANH MỤC SẢN PHẨM
    </div>
    <div class="list-group list-group-flush">
        @foreach (var item in Model)
        {
            <a href="/Category/Details/@item.Id"
               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3 border-bottom-0 category-item">
                <span>@item.Name</span>
                <i class="bi bi-chevron-right small text-muted"></i>
            </a>
        }
    </div>
</div>

<style>
    .category-item {
        transition: all 0.3s ease;
        font-size: 0.95rem;
    }

        .category-item:hover {
            background-color: #f8f9fa;
            color: #d9534f; /* Màu đỏ thương hiệu giống ảnh mẫu */
            padding-left: 25px; /* Hiệu ứng đẩy nhẹ sang phải khi hover */
        }

    .card-header {
        letter-spacing: 1px;
    }
</style>