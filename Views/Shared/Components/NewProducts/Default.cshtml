@model IEnumerable<Web_CK.Models.Products>

<div class="container my-5">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm product-card">
                    <div class="position-absolute top-0 start-0 m-2">
                        <span class="badge bg-danger rounded-0 px-3 py-2">HOT DEAL 🔥</span>
                    </div>

                    <div class="overflow-hidden bg-light">
                        <img src="@item.ImageUrl" class="card-img-top img-fluid transition-zoom" alt="@item.Name">
                    </div>

                    <div class="card-body px-1">
                        <h6 class="card-title text-truncate fw-normal mb-1">@item.Name</h6>

                        <div class="d-flex align-items-center flex-wrap gap-2">
                            <span class="text-danger fw-bold fs-5">@item.Price.ToString("N0")₫</span>
                            <span class="text-muted text-decoration-line-through small"></span>
                            <span class="badge rounded-pill bg-danger small"></span>
                        </div>
                    </div>

                    <div class="product-actions d-flex justify-content-center gap-2">
                        <button class="btn btn-dark btn-sm rounded-circle shadow"><i class="bi bi-cart"></i></button>
                        <button class="btn btn-white btn-sm rounded-circle shadow"><i class="bi bi-eye"></i></button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>