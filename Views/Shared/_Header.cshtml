@model IEnumerable<Web_CK.Models.Categories>

<style>
    .category-dropdown-item {
        transition: all 0.3s ease;
        padding: 10px 20px;
    }

        .category-dropdown-item:hover {
            background-color: #f8f9fa;
            color: #d9534f !important;
            padding-left: 25px;
        }
</style>

<header class="navbar navbar-expand-lg header-glass sticky-top py-3 border-bottom border-secondary bg-black">


    <div class="container-fluid d-flex align-items-center" style="padding: 0 50px;">
        <div class="flex-grow-1" style="flex-basis: 0;">
            <a class="navbar-brand ms-0" asp-controller="Home" asp-action="Index">
                <img src="/img/logo.png" alt="Logo" style="height: 50px; object-fit: contain; filter: brightness(0) invert(1);">
            </a>
        </div>


        <nav class="navbar-nav d-none d-lg-flex gap-5 align-items-center flex-grow-0">
            <a class="nav-link-item text-decoration-none link-light fw-bold fs-5" asp-controller="Home" asp-action="Index">Trang Chủ</a>
            <a class="nav-link-item text-decoration-none link-light fw-bold fs-5" asp-controller="Home" asp-action="About">Về Chúng Tôi</a>

            <div class="dropdown custom-hover-dropdown">
                <a class="nav-link-item text-decoration-none link-light fw-bold fs-5 dropdown-toggle"
                id="productDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Danh Mục
                </a>
                <ul class="dropdown-menu shadow-lg border-0 ">
					@await Component.InvokeAsync("CategoryList",new {TypeOfCategory = "Menu"})
                </ul>
            </div>

            <a class="nav-link-item text-decoration-none link-light fw-bold fs-5" asp-controller="Wishlist" asp-action="Index">Yêu Thích</a>
            <a class="nav-link-item text-decoration-none link-light fw-bold fs-5" asp-controller="Home" asp-action="Contact">Liên Hệ</a>
        </nav>

        <div class="d-flex align-items-center justify-content-end flex-grow-1 gap-3" style="flex-basis: 0;">
            <form class="d-none d-md-flex position-relative me-2" asp-controller="Product" asp-action="Search" method="get">
                <input class="form-control rounded-pill ps-4 pe-5 border-0 search-input" 
                type="search" placeholder="Tìm sản phẩm..." 
                style="width: 350px; height: 45px; background-color: #222; color: white;">
                <button class="btn position-absolute end-0 top-50 translate-middle-y border-0 bg-transparent pe-3" type="submit">
                    <i class="bi bi-search text-light"></i>
                </button>
            </form>


            <a asp-controller="Cart" asp-action="Index" class="link-light">
                <i class="bi bi-bag fs-2"></i>
            </a>


            <div class="dropdown custom-hover-dropdown">
                <a class="link-light dropdown-toggle no-caret" href="#" id="accountMenu" data-bs-toggle="dropdown">
                    <i class="bi bi-person fs-2"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0">
                    <li>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">Tài Khoản Của Tôi</a>
                    </li>
                    <li>
						<a class="dropdown-item" asp-controller="Account" asp-action="Logout">Danh Sách Yêu Thích</a>
                    </li>
                   <li>
						<a class="dropdown-item" asp-controller="Account" asp-action="SignIn">Đăng Nhập</a>
					</li>
					<li>
						<a class="dropdown-item" asp-controller="Account" asp-action="SignUp">Đăng Ký</a>
					</li>
			
                </ul>
            </div>
        </div>
    </div>
</header>
